generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Notification {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  body   String?
  isRead Boolean @default(false)

  createdAt DateTime @default(now())
}

model Conversation {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // participants (CLIENT - OWNER)
  users String[] @db.ObjectId

  // relation with messages
  messages Message[]

  lastMessageAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  senderId  String      @db.ObjectId
  sender    User        @relation("UserMessages", fields: [senderId], references: [id])
  isRead    Boolean     @default(false)
  type      MessageType @default(TEXT)
  text      String?
  imageUrl  String?
  voice     String?
  createdAt DateTime    @default(now())
}

model Payment {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  userId           String
  amount           Float
  method           String
  status           String // PENDING, SUCCESS, FAILED
  clickpayOrderId  String?
  clickpayCartId   String?
  clickpayResponse String? // تخزين كل الـ response
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  type          UserType
  name          String
  email         String?  @unique
  emailVerified Boolean  @default(false)
  phone         String?  @unique
  phoneVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  messages      Message[]      @relation("UserMessages")
  otps          Otp[]
  market        Market?
  orders        Order[]
  notifications Notification[]

  addresses Address[]
}

model Address {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  type        AddressType
  fullAddress String
  isSelected  Boolean     @default(false)

  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
}

model Market {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  ownerId String @unique @db.ObjectId
  owner   User   @relation(fields: [ownerId], references: [id])

  zone       String?
  district   String?
  address    String?
  operations String[] @default([])
  hours      String[] @default([])

  products   Product[]
  categories Category[]
  orders     Order[]
  image      String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Order {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @unique

  clientId String? @db.ObjectId
  marketId String? @db.ObjectId

  deliveryAddress String?

  date DateTime?
  time String?

  status    OrderStatus @default(IN_PROGRESS)
  createdAt DateTime    @default(now())
  // relations
  market    Market?     @relation(fields: [marketId], references: [id])
  client    User?       @relation(fields: [clientId], references: [id])
}

model Otp {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  code       String
  identifier String
  userId     String?  @db.ObjectId
  user       User?    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  expiresAt  DateTime
}

model Category {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  nameAr String?
  nameEn String?
  icon   String?

  marketId String @db.ObjectId
  market   Market @relation(fields: [marketId], references: [id])

  products Product[]

  createdAt DateTime @default(now())
}

model Product {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  titleAr String?
  titleEn String?
  price   Float?
  images  String[] @default([])

  marketId String @db.ObjectId
  market   Market @relation(fields: [marketId], references: [id])

  categoryId String?   @db.ObjectId
  category   Category? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
}

enum OrderStatus {
  IN_PROGRESS
  COMPLETED
  DECLINE
}

enum MessageType {
  TEXT
  IMAGE
  VOICE
  SYSTEM
}

enum UserType {
  OWNER
  CLIENT
}

enum AddressType {
  WORK
  HOME
  OTHER
}
