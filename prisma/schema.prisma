generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Notification {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  body   String?
  isRead Boolean @default(false)

  createdAt DateTime @default(now())
}

model Conversation {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // participants (CLIENT - OWNER)
  users String[] @db.ObjectId

  // relation with messages
  messages Message[]

  lastMessageAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  senderId  String      @db.ObjectId
  sender    User        @relation("UserMessages", fields: [senderId], references: [id])
  isRead    Boolean     @default(false)
  type      MessageType @default(TEXT)
  text      String?
  imageUrl  String?
  voice     String?
  createdAt DateTime    @default(now())
}

model Payment {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  amount Float
  method String
  status PaymentStatus @default(PENDING)

  clickpayOrderId  String?
  clickpayCartId   String?
  clickpayResponse String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  type           UserType
  name           String
  email          String?  @unique
  fcmToken       String?
  phone          String?  @unique
  phoneVerified  Boolean  @default(false)
  image          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  isAproved      Boolean  @default(false)
  isFeesRequired Boolean  @default(false)

  messages      Message[]      @relation("UserMessages")
  otps          Otp[]
  market        Market?
  orders        Order[]
  notifications Notification[]
  addresses     Address[]
  payments      Payment[]
  location      Float[]        @default([]) // [latitude, longitude]
}

model UserDashboard {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String?   @default("admin")
  email     String
  password  String
  type      UserType? @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Address {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  type        AddressType
  fullAddress String
  isSelected  Boolean     @default(false)

  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
}

model MarketCategory {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  marketId   String @db.ObjectId
  categoryId String @db.ObjectId

  market   Market   @relation(fields: [marketId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])
}

model Market {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  nameAr        String?
  nameEn        String?
  descriptionAr String?
  descriptionEn String?
  ownerId       String     @unique @db.ObjectId
  owner         User       @relation(fields: [ownerId], references: [id])
  limitFees     Float?     @default(0.0)
  feePerOrder   Float?     @default(0.0)
  currentFees   Float?     @default(0.0)
  zone          String?
  district      String?
  address       String?
  operations    String[]   @default([])
  hours         String[]   @default([])
  deliveries    Delivery[]
  from          DateTime? // تاريخ البداية
  to            DateTime? // تاريخ النهاية

  products   Product[]
  orders     Order[]
  categories MarketCategory[]

  image         String?
  commissionFee Float   @default(5)
  location      Float[] @default([])

  isOpen Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Delivery {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  nameAr String?
  nameEn String?
  phone  String?
  image  String?

  marketId String? @db.ObjectId
  market   Market? @relation(fields: [marketId], references: [id])

  orders Order[]
}

model Order {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @unique

  clientId   String? @db.ObjectId
  marketId   String? @db.ObjectId
  deliveryId String? @db.ObjectId // الجديد

  deliveryAddress String?

  date      DateTime?
  time      DateTime?
  hasRate   Boolean     @default(false)
  status    OrderStatus @default(IN_PROGRESS)
  createdAt DateTime    @default(now())
  rate      Float       @default(0)
  // relations
  market    Market?     @relation(fields: [marketId], references: [id])
  client    User?       @relation(fields: [clientId], references: [id])
  delivery  Delivery?   @relation(fields: [deliveryId], references: [id]) // الجديد

  totalPrice      Float @default(0)
  commissionValue Float @default(0)
}

model Category {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  nameAr String
  nameEn String
  icon   String?

  markets MarketCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Otp {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  code       String
  identifier String
  userId     String?  @db.ObjectId
  user       User?    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  expiresAt  DateTime
}

model Product {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  titleAr       String?
  titleEn       String?
  descriptionAr String?
  descriptionEn String?
  price         Float?
  images        String[]
  market        Market   @relation(fields: [marketId], references: [id])
  marketId      String   @db.ObjectId
  createdAt     DateTime @default(now())

  @@map("products")
}

enum OrderStatus {
  IN_PROGRESS
  COMPLETED
  DECLINE
}

enum MessageType {
  TEXT
  IMAGE
  VOICE
  BANAR
  SYSTEM
}

enum UserType {
  OWNER
  CLIENT
  ADMIN
}

enum AddressType {
  WORK
  HOME
  OTHER
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
